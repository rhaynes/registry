.ui-Item
  .item
    div
      .thumbnail
        a.get-item(href='', data-bind='click: selectAll')
          img(data-bind='attr: {src: src}')
    .item-descr
      a.get-item(href='', data-bind='click: selectAll') <span data-bind='text: title'/>
    .item-price $<span data-bind='text: price'/>.00
    .item-progress <span data-bind='text: funded'/> funded
    .clearfix
    .progress(style='height:10px')
      .progress-bar.progress-bar-primary.progress-bar-striped(role='progressbar', data-bind='style:{width: funded}')
    div
      span.contribute Contribute
      button.btn.btn-sm.btn-primary.mls(style='float:right', data-bind='visible: remaining() >= 150, click: selectContrib(150)') $150
      button.btn.btn-sm.btn-primary.mls(style='float:right', data-bind='visible: remaining() >= 100, click: selectContrib(100)') $100
      button.btn.btn-sm.btn-primary.mls(style='float:right', data-bind='visible: remaining() >= 75, click: selectContrib(75)') $75
      button.btn.btn-sm.btn-primary.mls(style='float:right', data-bind='visible: remaining() > 0, click: selectContrib(50), css: {gold: remaining()==0}') $50
      button.btn.btn-sm.btn-primary.mls(style='float:right', data-bind='visible: remaining()==0, enable: remaining()>0, css: {gold: remaining()==0}') $100

